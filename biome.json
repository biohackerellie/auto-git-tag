{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "files": {
    "ignoreUnknown": true,
    "include": ["src/*.ts"],
    "ignore": ["node_modules", "dist"]
  },
  "organizeImports": { "enabled": true },
  "linter": {
    "ignore": ["node_modules", "dist", "**/*.test.ts"],
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off"
      }
    }
  }
}
